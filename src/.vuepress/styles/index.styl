    letter-spacing: 2px;
}

  .content__default p:first-of-type {
    font-size: 1.5rem;
    padding-top: 5%;
}

  .video-container {
    flex-direction: column;
  }

  .video-container iframe {
    margin: 5%;
    margin-left: 0px;
    margin-right: 0px;
    width: 375px !important;
  }
  
}

