@font-face {
  font-family: SpaceGrotesk;
  font-style: normal;
  font-weight: 700;
  src: url('/fonts/space-grotesk-700.woff2') format('woff2'), url('/fonts/space-grotesk-700.woff') format('woff'); /* Legacy iOS */
}

@font-face {
    font-family: Rubik;
    src: url('/fonts/rubik-regular.woff2') format('woff2'), url('/fonts/rubik-regular.woff') format('woff');
}

html {
    scroll-behavior: smooth;

    /* Hide scrollbar for IE, Edge and Firefox */
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
}

* {
    font-family: Rubik;
}

/* Hide scrollbar for Chrome, Safari and Opera */
*::-webkit-scrollbar {
  display: none;
}

h1, h2, h3, h4 {
    font-family: SpaceGrotesk;
    font-style: normal;
    font-weight: 700;
    color: #FFFFFF;

    border-bottom: none;
}

h1 {
    font-size: 42px;
    line-height: 52px;
    word-break: break-word

    @media (min-width: 640px)  {
        font-size: 48px;
        line-height: 60px;
    }
}

h2 {
    font-size: 32px;
    line-height: 40px;

    @media (min-width: 640px)  {
        font-size: 36px;
        line-height: 46px;
    }
}

h3 {
    font-size: 26px;
    line-height: 32px;

    @media (min-width: 640px)  {
        font-size: 30px;
        line-height: 36px;
    }
}

h4 {
    font-size: 22px;
    line-height: 28px;

    @media (min-width: 640px)  {
        font-size: 24px;
        line-height: 32px;
    }
}

p {
    font-size: 16px;
    margin-top: 0;
    @media (min-width: 640px)  {
        font-size: 18px;
    }
}

a {
    cursor: pointer;
}

aside {
  ul, ol {
    list-style: none;
    padding-left: 0;
  }
}

tr:nth-child(2n) {
  color: unset;
  background-color: unset;
}

th, td {
  border-color: #282c34;
}

.page-heading {
    position: relative;

    font-family: SpaceGrotesk;
    font-style: normal;
    font-weight: 700;
    font-size: 24px;
    line-height: 31px;
    letter-spacing: 0.4px;
    text-transform: uppercase;

    margin-bottom: 76px;

    color: #FFFFFF;
}

.page-heading::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -16px;

    width: 48px;
    height: 4px;
    background: #E83F42;
}

.flex-col {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.flex-row {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

img{
     max-width: 100%;
     max-height:100%;
     height: auto;
}

code {
  font-size: .9em;
  background-color: #282c34;
  padding: .2em .4em;
  border-radius: .5em;
}

pre code {
  background-color: transparent;
  padding: 0;
}

.code-copy{
    display: flex;
}

.sidebar-sub-headers {
  margin-top: 0 !important;
}

li a[href="/specification/00-Abstract/"] {
  padding-top: .75rem;
}

/* Targets all elements that have an id attribute */
#app [id] { /* e.g documention anchors */
  scroll-margin-top: 7rem;
  margin-bottom: 0.75rem;

  @media (min-width: 640px) {
    scroll-margin-top: 8rem;
  }
}

// YouTube videos
.ytEmbed {
  display: block;
  position: relative;
  margin: 1rem 0 2rem;
  height: 0;
  overflow: hidden;
  max-width: 100%;
  padding-bottom: 56.25%;
  background-repeat: no-repeat;
  background-position: 50%;
  background-size: cover;
}

.ytEmbed:before {
  background: url("data:image/png;base64, ") no-repeat center center;
  background-size: auto;
  background-size: 64px 64px;
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: 0.8;
  transition: all 0.2s ease-out;
  content: '';
  cursor: pointer;
}

.ytEmbed iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: none;
}

.ytEmbed iframe[src] {
  display: block;
}

// mobile styles
@media (max-width: 520px) {

  .supportersTabs > div > div > nav > a.text-sm {
    font-size: 0.83rem !important;
  }

  .configTabs > div > div > nav > a.text-sm {
    padding: 10px 14px;
  }
}

.video-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.video-container iframe {
  margin: 10px;
}

embed, iframe {
  border: 1px solid #ccc;
  margin-top: 20px;
}

.series {
  justify-content: center;
}
